export function isSameValue (x, y) {
  // SameValue algorithm
  if (x === y) {
    // 处理为+0 != -0的情况
    return x !== 0 || 1 / x === 1 / y;
  } else {
    // 处理 NaN === NaN的情况
    return x !== x && y !== y;
  }
}
